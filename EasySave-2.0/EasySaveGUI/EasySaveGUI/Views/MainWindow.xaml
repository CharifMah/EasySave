<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveGUI" xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
         xmlns:Ressources="clr-namespace:Ressources;assembly=Ressources"
        x:Class="EasySaveGUI.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="450" WindowStyle="None" ResizeMode="CanResizeWithGrip">

    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="0" ResizeBorderThickness="2" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="WindowState" Value="Maximized">
                    <Setter Property="WindowChrome.WindowChrome" Value="{x:Null}" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Style>

    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Grid>
                <!-- Window background -->
                <Border Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Window title bar -->
                        <Grid Grid.Row="0" Background="#187BDC" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" MouseMove="TitleBar_MouseMove" MouseDown="TitleBar_MouseDown"
                              >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!-- Window title -->
                            <TextBlock Text="{TemplateBinding Title}" VerticalAlignment="Center" Margin="5" Foreground="White" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Height="20" Margin="5"> |</TextBlock>
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <TextBlock Height="20" Margin="5"> |</TextBlock>
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <materialIcons:MaterialIcon Kind="Home" Margin="5" Width="15" Height="15" />
                                <TextBlock Height="20" Margin="5"> |</TextBlock>

                                <ComboBox Height="20" Width="90" Focusable="True" FontSize="10">
                                    <ComboBoxItem IsSelected="True">Quick Action</ComboBoxItem>
                                    <ComboBoxItem>Quick Acqsdtion</ComboBoxItem>
                                    <ComboBoxItem>Quick qsdAction</ComboBoxItem>
                                    <ComboBoxItem>Quick Aqction</ComboBoxItem>
                                </ComboBox>

                            </StackPanel>
                            <!-- Window control buttons -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0" >
                                <Button Width="20" Height="20" Margin="5" Click="MinimizeButton_Click" Background="Transparent" BorderThickness="0">
                                    <materialIcons:MaterialIcon Kind="WindowMinimize" Width="15" Height="15" />
                                </Button>
                                <Button Width="20" Height="20" Margin="5" Click="MaximizeButton_Click" Background="Transparent" BorderThickness="0">
                                    <materialIcons:MaterialIcon Kind="WindowMaximize" Width="15" Height="15"/>
                                </Button>
                                <Button Width="20" Height="20" Margin="5" Click="CloseButton_Click" Background="Transparent" BorderThickness="0">
                                    <materialIcons:MaterialIcon Kind="Close"  Width="15" Height="15"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Window content -->
                        <ContentPresenter Grid.Row="1" Margin="0"/>
                    </Grid>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Template>

    <!--Main Content-->
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.059*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="0" Background="#CEE6FD">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Style="{StaticResource CustomButton}" Content="{x:Static Ressources:Strings.LoadJobs}" MouseEnter="Button_MouseEnter"/>
        </Grid>

        <DockingManager x:Name="Dock" Grid.Column="1" Grid.Row="1" Background="#EDF5FD">
            <DockingManager.Layout>
                <LayoutRoot>
                    <LayoutPanel Orientation="Horizontal">

                        <!-- Elements Pane -->
                        <LayoutAnchorablePane DockMinWidth="150" AllowDuplicateContent="False">

                            <LayoutAnchorable Title="Elements" x:Name="ListElements" CanAutoHide="True" CanClose="False">
                                <StackPanel VerticalAlignment="Center">
                                    <Button Content="{x:Static Ressources:Strings.DefaultFile}" Click="LoadConfigDefaultFileButton_Click"/>
                                    <Button Content="{x:Static Ressources:Strings.SelectConfigurationFile}" Click="LoadConfigFileButton_Click"/>
                                </StackPanel>
                            </LayoutAnchorable>

                        </LayoutAnchorablePane>

                        <LayoutPanel Orientation="Vertical">

                            <LayoutPanel Orientation="Horizontal">

                                <LayoutDocumentPaneGroup Orientation="Horizontal">

                                    <LayoutDocumentPaneGroup Orientation="Vertical" DockWidth="200">

                                        <!--Variable Pane-->
                                        <LayoutDocumentPaneGroup Orientation="Horizontal">
                                            <LayoutDocumentPane>
                                                <LayoutDocument Title="Jobs" CanClose="False">

                                                    <ListBox x:Name="JobsList" ItemsSource="{Binding JobManager.Jobs,Mode=TwoWay}">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding Name}">
                                                                        <Run Text="{x:Static Ressources:Strings.Name}"/>
                                                                        <Run Text=": "/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="{Binding SourceDirectory}">
                                                                        <Run Text="{x:Static Ressources:Strings.SourceDir}"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="{Binding TargetDirectory}">
                                                                        <Run Text="{x:Static Ressources:Strings.TargetDirectory}"/>
                                                                    </TextBlock>
                                                                </StackPanel>

                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>

                                                </LayoutDocument>
                                            </LayoutDocumentPane>
                                        </LayoutDocumentPaneGroup>

                                    </LayoutDocumentPaneGroup>

                                </LayoutDocumentPaneGroup>

                                <LayoutAnchorablePaneGroup DockWidth="120">

                                    <!-- Property Pane -->
                                    <LayoutAnchorablePane>

                                        <LayoutAnchorable Title="Property" x:Name="PropertyPane">


                                        </LayoutAnchorable>

                                    </LayoutAnchorablePane>

                                </LayoutAnchorablePaneGroup>

                            </LayoutPanel>

                            <LayoutAnchorablePaneGroup DockHeight="120">

                                <!-- Logs -->
                                <LayoutAnchorablePane>
                                    <LayoutAnchorable Title="Logs">
                                        <ListBox x:Name="ListLogs" ItemsSource="{Binding Datas,Mode=OneWay}"></ListBox>
                                    </LayoutAnchorable>
                                </LayoutAnchorablePane>

                            </LayoutAnchorablePaneGroup>

                        </LayoutPanel>

                    </LayoutPanel>
                </LayoutRoot>
            </DockingManager.Layout>
        </DockingManager>

    </Grid>

</Window>
